---
layout: layouts/base.njk
---
{% for resource in singletons %}
{% if resource.title == "Speaking" %}

<div class="singleton speaking">
  <article class="body-text">
    <section class="wrap">
      <h1>{{ resource.title }}</h1>
      {{ resource.bodyText | markdownify | safe }}
      <ul>
      {% for event in events %}
        <li>

          <time class="timeclass" datetime="{{ event.date }}">
              {{ event.date | date("MMMM D, YYYY") }}
              <span class="future">upcoming</span>
          </time>
          <h3>
            {% if event.link %}
            <a href="{{ event.link }}">{{ event.event }}{% include '../_includes/icons/external.svg' %}</a>
            {% else %}
            {{ event.event }}
            {% endif %}
          </h3>
          <p>
            {{ event.location.city }}, {{ event.location.state if event.location.state else event.location.country }}
          </p>
        </li>
      {% endfor %}
      </ul>
    </section>
</div>

{% endif %}
{% endfor %}