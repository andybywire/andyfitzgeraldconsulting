---
# Layout template for Service detail pages.
layout: layouts/base.njk
---
<article class="service">
  <section class="overview">
    {% responsiveImage service.heroImage %}
    <h1>{{ service.title }}</h1>
    {{ service.overview | markdownify | safe }}
  </section>
  <section>
    {{ service.body | markdownify | safe }}
    <p><a href="{{ '/' | url }}">‚Üê Home</a></p>
  </section>
</article>