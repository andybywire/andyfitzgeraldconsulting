<!doctype html>
<html lang="en">
	{% include 'partials/head.njk' %}
	<body>
		{# <a href="#main-content" class="show-on-focus">Skip to Main Content</a> #}
		<header>
			<nav>
				<a href="/" class="masthead">
					<div>
						{% include 'icons/afc.svg' %}
					</div>
					<div class"title">
						<div class="site-title">
							{{ metadata.siteTitle }}
						</div>
						<div class="subtitle">
							{{ metadata.siteSubtitle }}
						</div>
					</div>
				</a>
				<ul class="menu">
					{% for item in navigation.items %}
						<li>
							<a href="{{ item.url }}" 
								{{ helpers.getLinkActiveState(item.url, page.url) | safe }}
								>{{ item.text }}</a>
						</li>
					{% endfor %}
				</ul>
			</nav>
		</header>
		{{ content | safe }}
		<footer>
			<section class="site-info">
				<p class="description">Andy Fitzgerald Consulting, LLC is the independent content operations practice of Andy Fitzgerald, PhD and a registered Sanity agency partner.</p>
				<ul class="menu">
					{% for item in navigation.items %}
						<li>
							<a href="{{ item.url }}">{{ item.text }}</a>
						</li>
					{% endfor %}
				</ul>
			</section>
			<section class="social">
				<ul>
					<li class="linkedin">
						<a href="http://www.linkedin.com/in/andyfitzgerald" target="_blank" rel="noopener">{% include 'icons/linkedin.svg' %}</a>
					</li>
					<li class="github">
						<a href="https://www.github.com/andybywire" target="_blank" rel="noopener">{% include 'icons/github.svg' %}</a>
					</li>
					<li class="medium">
						<a href="https://medium.com/@andybywire" target="_blank" rel="noopener">{% include 'icons/medium.svg' %}</a>
					</li>
					<li class="rss">
						<a href="https://andyfitzgeraldconsulting.com/feed.xml" target="_blank" rel="noopener">{% include 'icons/rss.svg' %}</a>
					</li>
				</ul>
			</section>
			<p class="copyright">Â© 2013-2025 Andy Fitzgerald Consulting, LLC | Built with <a href="https://www.sanity.io" target="_blank" rel="noopener">Sanity</a> + <a href="https://www.11ty.dev" target="_blank" rel="noopener">Eleventy</a></p>
		</footer>
		<script>
			if (navigator.serviceWorker) {
				navigator
					.serviceWorker
					.register('/serviceworker.js')
					.then(function (registration) {
						console.log('Service worker registered with scope:', registration.scope);
					})
					.catch(function (error) {
						console.log('Service worker registration error:', error);
					});
			}
		</script>
	{% if '/talks' in page.url %}
		<script src="/js/upcomingTalks.js"></script>
	{% endif %}
	{% if '/contact' in page.url %}
		<script src="https://www.google.com/recaptcha/api.js" async defer></script>
	{% endif %}
	</body>
</html>