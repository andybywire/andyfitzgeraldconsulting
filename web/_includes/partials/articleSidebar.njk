<h2>Categories</h2>
  <ul>
  {%- for label in taxonomy -%}
  {% if label.scheme == "Category" %}
    <li><a href="/writing/tag/{{ label.prefLabel | slugify }}">{{ label.prefLabel }}</a></li>
  {% endif %}
  {%- endfor -%}
  </ul>
<h2>Topics</h2>
  <ul>
  {%- for label in taxonomy -%}
  {% if label.scheme == "Topic" %}
    <li><a href="/writing/tag/{{ label.prefLabel | slugify }}">{{ label.prefLabel }}</a></li>
  {% endif %}
  {%- endfor -%}
  </ul>
